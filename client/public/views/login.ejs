<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.7/semantic.min.css">
    <link rel="stylesheet" href="/css/styles.css" >
    <link rel="stylesheet" href="/css/login.css" >

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/login.js" charset="utf-8"></script>
    <title>FeelTrip</title>
  </head>

  <body>
  

  <div class="video-container">
    <video autoplay loop class="fillWidth">
      <source src="/videos/MP4/NYC-Traffic.mp4" type="video/mp4">
      <source src="/videos/WEBM/NYC-Traffic.webm" type="video/webm">
    </video>
  </div>

  <div class="page-wrapper">
    <div class="ui text container">
      <div class="welcome">
        <h1 id="title"><span class="mint">Feel</span>Trip</h1>
        <p id="subtitle">Immerse yourself in places online</p>
        <div id="message" class="mint"></div>
        <form class="ui center aligned form text container" id="login-form"> 
          <div class="field">
            <input type="text" name="username" placeholder="Username">
          </div>
          <div class="field">
            <input type="password" name="password" placeholder="Password">
          </div>
          <div class="field">  
            <input id="add-user" class="ui huge inverted button" type="submit" name="name" value="LOG IN">
          </div>
        </form>
        <p>Don't have an account? <span id="sign-up" href="#" class="mint">Sign Up</span>.
      </div>
    </div>
  </div>
  

  <!-- Hidden sign up form -->
  <div class="sign-up-form hidden">
    <div id="modal-container">

      <div class="ui center aligned form text container" id="modal-body"> 
      <h1 id="sign-up-title">sign up</h1>
      <i class="circular inverted remove icon" id="modal-close"></i>
        
        <div class="field" id=first-field>
          <input type="text" name="username" placeholder="Username">
        </div>
        <div class="center aligned field">
          <input type="text" name="email" placeholder="Email">
        </div>
          <div class="field">
          <input type="password" name="password" placeholder="Password">
        </div>
        <div class="field">  
          <input id="add-user" class="ui medium black button" type="submit" name="name" value="Submit">
        </div>
      </div>
    </div>
  </div>
  


   
  </body>
</html>
